=render "users/logo"


.buy
  .buy-item
    .buy-item__title
      %h2 購入内容の確認
    .buy-item__image
      = image_tag @item.images[0].url.url, size: '300x300', class: 'buydetails-contet__image'
    .buy-item__name
      = @item.name
    .buy-item-price
      支払金額
      = "¥#{@item.price.to_s}"

  .buy-item
    .buy-item__card
      %h3 支払方法
    .buy-item__card--update
      = link_to "変更する", new_card_path, calss:"update-btn"
    .buy-item__card--edit
    - if @default_card_information.blank?
      %br /
    - else
      = "**** **** **** " + "#{@default_card_information.last4}"
      %br
      - exp_month = @default_card_information.exp_month.to_s
      - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
      = "有効期限 " + exp_month + " / " + exp_year
      %br

  .buy-item
    .buy-item__profile
      %h3 配送先
    .buy-item__profile--update
      = link_to "変更する","#", calss:"update-btn"
    .buy-item__profile
      〒
      = current_user.profile[:post_number]
      %br
      = current_user.profile[:prefecture]
      = current_user.profile[:city]
      = current_user.profile[:house_number]
      = current_user.profile[:building_name]
      %br
      = current_user.profile[:first_name]
      = current_user.profile[:family_name]

  .buy-item
    = form_tag(action: :buy) do
      %button.buy-button{type:"submit"} 購入する


.footer
= render "users/footer"